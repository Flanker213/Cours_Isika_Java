package fr.isika.cda10.calculreduction.app;

import java.util.Scanner;

public class CalculReductionTicketApp {

	public static void main(String[] args) {
		/*
		 * Ecrire un programme permettant de calculer le prix d'un ticket
		 * de spectacle (prix unitaire de votre choix) et d'y appliquer une réduction
		 * en fonction de l'âge (ou la catégorie) d'une personne.
		 * 
		 * Les règles sont :
		 * - prixAvecReduction : décimale (en euro)
		 * - Si age entre 8 et 12 (ou catégorie "enfant") : réduction de 15%
		 * - Si age entre 12 et 25 (ou catégorie "jeune") : réduction de 10%
		 * - Si age est supérieur à 60 (ou catégorie "sénior") : réduction de 20%
		 * 
		 * - Pour les adultes pas de réduction.
		 */
		
		// saisi de la ctaégorie de réduction au clavier
		System.out.println("Veuillez saisir votre catégorie de réduction :");
		Scanner scanner = new Scanner(System.in);
		String categoriePersonne = scanner.next();
		
		float reduction = 0;
		float prix = 10f;
		
		switch(categoriePersonne) {
		case "Enfant" :
			reduction = 1.5f;
			break;
		case "Jeune" :
			reduction = 1;
			break;
		case "Senior" :
			reduction = 2;
			break;
		default :
			System.out.println("Vous ne bénéficiez pas de réduction");
			break;
		}
		
		// code commun
		System.out.println("Prix avec réduction pour la catégorie : " + categoriePersonne + " = " + (prix - reduction));

	}

}
