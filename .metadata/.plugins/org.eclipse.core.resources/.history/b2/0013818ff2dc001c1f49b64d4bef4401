package fr.isika.cda10.temperature.app;

import java.util.Scanner;

// package; 1 fois
// imports 0 ou plusieurs

public class TemperatureApp {

	public static void main(String[] args) {
		
		/*
		 * si température inférieur à 0 - eau gêlée
		 * sinon si entre 0 et 100 - liquide
		 * sinon si sup à 100 - vapeur
		 */
		
		// saisi de la température au clavier
		
		System.out.println("Veuillez saisir la température :");
		Scanner scanner = new Scanner(System.in);
		int temperature = scanner.nextInt();
		

		
		// condition
		if(temperature <= 0){
			System.out.println("La températeur de l'eau est de " + temperature + "°, l'eau est gêlée !");
		}else if(temperature >0 && temperature <100){
			System.out.println("La températeur de l'eau est de " + temperature + "°, l'eau est liquide !");
		}else{
			System.out.println("La températeur de l'eau est de " + temperature + "°, l'eau s'est vaporisée !");
		}
		scanner.close();
	}

}
